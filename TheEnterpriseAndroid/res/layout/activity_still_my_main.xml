<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hello Everyone, this is a tricky session"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Give me another activity"
            android:id="@+id/button_start_activity"
            android:layout_gravity="center|left"
            android:width="300dp"/>

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="This content suppose to change with content from another activity"
            android:id="@+id/editText_content_from_activity"
            android:layout_gravity="center"/>

</LinearLayout>

